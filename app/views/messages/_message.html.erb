<div class="content-message" id="message-<%= message.id %>">
  <div class="row">
    <% if message.user.photo.attached? %>
      <%= cl_image_tag message.user.photo.key, class:"avatar-large" %>
    <% else %>
      <%= image_tag "blank-profile-picture.png", class:"avatar-large" %>
    <% end %>
    <div class="container">
      <p><%= message.user.username %></p>
      <p><%= message.content%></p>
    </div>
  </div>
  <div class="container">
    <% if message.photo.attached? %>
      <%= cl_image_tag message.photo.key, :width => 200, class:"row"%>
    <% else %>
      <div class="d-none"></div>
    <% end %>
  </div>
</div>
