<div data-controller="test" class="container">
  <br>
  <%= render "form" %>
  <h3>Live now</h3>
  <% first_performance = @performances.first%>
  <% if first_performance %>
    <%= link_to performance_path(first_performance) do %>
      <%# <%= cl_image_tag ("ianq3ompto1gj0p3d0lh3qmggujo", height: 600, width: 800, crop: :fill) %>
      <div class="perf-card-lg">
        <div class="upper-components">
          <i class="far fa-heart"></i>
          <div class="live-button">
            <p>LIVE</p>
          </div>
        </div>
        <div class="perf-text">
          <p><strong><%= first_performance.artist.name %></strong></p>
          <p><em class="fas fa-map-marker-alt text-light"></em>  <%= first_performance.address %></p>
          <p><em class="far fa-clock"></em> <%= first_performance.start_time %></p>
        </div>
      </div>
    <% end %>
  <% end %>
  <h3>More shows</h3>
  <div data-test-target="container" class="test"></div>
  <div class="card-row">
    <% @performances.each do |performance| %>
      <div data-test-target="items" class="perf-card-sm col-5">
        <%= link_to performance_path(performance) do %>
          <i class="far fa-heart"></i>
          <div class="perf-text-sm">
            <p><strong><%= performance.artist.name %></strong></p>
            <p><em class="fas fa-map-marker-alt text-light"></em>  <%= performance.address %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <h3>Explore more shows</h3>
</div>
