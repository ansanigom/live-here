<div class="container d-flex justify-content-center">
  <h1>LiveHere</h1>
</div>
<!--Artist profile part -->
<div class="container d-flex justify-content-between">
  <%= image_tag "https://www.aceshowbiz.com/images/photo/shakira.jpg", class:"avatar-large" %>
  <div class="container d-flex align-content-center justify-content-around flex-column">
    <h3 class="m-0"><%= @performance.artist.name %></h3>
    <p class="m-0">10 performances to date</p>
  </div>
  <%= link_to 'Edit', "/", class:'btn-performance' %>
</div>
<!--Streaming part -->
<div class="container my-3">
  <%= video_tag "stream.mp4", class:"w-100", controls: :controls, :loop => true%>
  <div class="container d-flex">
    <em class="fas fa-map-marker-alt text-light"></em>
    <p class="ml-2">Yoyogi park</p>
  </div>
  <p>Tips today</p>
</div>
<!-- Cards space-->
<div class="container d-flex justify-content-around flex-wrap">
  <div class="container tip-container my-2">
    <h3>TIPS</h3>
    <h1><%= @tips.sum(:amount_cents) %> ¥</h1>
  </div>

  <!--Messages container-->

  <div class="container message-container my-2 w-100" data-controller="display-messages">
    <h3>TIPS</h3>
    <!--Tips message area-->
    <div class="container">
      <% @tips.last(2).each do |tip| %>
        <div class="tip-message">
          <%= image_tag "https://avatars.githubusercontent.com/u/88181896?v=4", class:"avatar-large" %>
          <h5 class="tip-text"><%= tip.user.username %> tipped!</h5>
          <span><%= tip.amount_cents %> ¥</span>
        </div>
        <% end %>
    </div>

     <!--Extension messages area-->
     <h3>Messages</h3>
    <div id="messages" class="container messages-content messages-content-large" data-display-messages-target="box" data-performance-id="<%= @performance.id %>">
      <% @messages.each do  |message|%>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <p data-display-messages-target="display" data-action="click->display-messages#display">View 4 more messages</p>
    <h5>Comment here!</h5>
    <%= simple_form_for [@performance, @message], remote: true do |f| %>
      <%= f.input :content, label: false %>
      <%= f.button :submit, value: 'send!', class:'w-100' %>
    <% end %>
  </div>
</div>

<%= link_to "sign out", destroy_user_session_path, method: :delete%>
