<% end %>

<div class="fixed-top top-bar wireframe" style="">

  <!-- background opacity shifting rectangle -->
  <div id="test" class="navbar-background" style=""></div>

  <div class="ro-container wireframe" style="">
    <!-- brand home - hidden from top nav on small screens -->
    <%= render 'shared/brand_logo_button', display_class: "top-nav-icons" %>
    <!-- Raibuon search bar -->
    <%= render 'shared/searchbar', display_class: "searchbar-main #{home_page_switch}" %>

<!-- user options - hidden from top nav on small screens -->
    <%= render 'shared/user_options_button', display_class: "top-nav-icons" %>


  </div>
