<% path = request.env['PATH_INFO'] %>

<!-- QR code scan website https://qrcodescan.in/ -->
<% if path.include?("performances/") == true %>
  <% action_link = "/performances/#{@performance.id}/tips/new" %>
  <% icon = "ro-navbar__tip-icon" %>
  <% icon_text = "tip" %>
<% elsif current_page?('/')%>
  <% action_link = "https://qrcodescan.in/" %>
  <% icon = "fas fa-qrcode ro-navbar__qrscan-icon" %>
  <% icon_text = "" %>
<% elsif path.include?("/performances") == true %>
  <% action_link = "https://qrcodescan.in/" %>
  <% icon = "fas fa-qrcode ro-navbar__qrscan-icon" %>
  <% icon_text = "" %>
<% else %>
  <% action_link = "/performances" %>
  <% icon = "fas fa-search ro-navbar__search-icon" %>
  <% icon_text = "" %>
<% end %>

<%= link_to action_link, class: "#{display_class} bigbutton_icon_container wireframe", style: ""  do %>
    <i class="<%= icon %>"><%= icon_text %></i>
<% end %>
