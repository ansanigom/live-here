<% path = request.env['PATH_INFO'] %>
<!-- QR code scan website https://qrcodescan.in/ -->
<% if path.include?("performances/") %>
  <% action_link = "/performances/#{@performance.id}/tips/new" %>
  <% icon = "ro-button-bigbutton-tip-icon" %>
  <% icon_text = "tip" %>
<% elsif current_page?('/')%>
  <% action_link = "https://qrcodescan.in/" %>
  <% icon = "fas fa-qrcode ro-button-bigbutton-qrscan-icon" %>
  <% icon_text = "" %>
<% elsif path.include?("/performances") == true %>
  <% action_link = "https://qrcodescan.in/" %>
  <% icon = "fas fa-qrcode ro-button-bigbutton-qrscan-icon" %>
  <% icon_text = "" %>
<% else %>
  <% action_link = "/performances" %>
  <% icon = "fas fa-search ro-button-bigbutton-search-icon" %>
  <% icon_text = "" %>
<% end %>
<% unless path.include?("performances/") %>
  <%= link_to action_link, class: "#{display_class} ro-button-bigbutton-icon-container wireframe", style: ""  do %>
    <i class="<%= icon %>"><%= icon_text %></i>
  <% end %>
<% end %>
