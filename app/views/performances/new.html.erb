<div class="container">
  <h2>Post your show!</h2>
  <%= simple_form_for @performance do |f| %>
    <%= f.input :name, :label => "Show Name" %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :performance_date, as: :date, html5: true %>
    <%= f.input :start_time, as: :time, html5: true %>
    <%= f.submit :Post, class:"btn btn-dark" %>
  <% end %>
</div>
