<%= form_tag performances_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    data: {
          test_target: 'input',
          action: 'input->test#send'
          },
    placeholder: "Find a show"
    %>
  <%= submit_tag "Search", class: "btn btn-ghost mt-2" %>
<% end %>
