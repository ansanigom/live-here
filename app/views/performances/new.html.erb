<div class="container">
  <h2>Post your show!</h2>
  <%= simple_form_for @performance do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :start_time, html5: true %>
    <%= f.input :end_time, html5: true %>
    <%= f.submit :Post, class:"btn btn-dark" %>
  <% end %>
</div>
